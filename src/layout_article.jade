doctype html
html
	head
		meta(charset="UTF-8")
		title
			block title

		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="/static/styles.css")
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Merriweather:300,300i,700,700i&amp;subset=cyrillic,cyrillic-ext,latin-ext")
		link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.5.0/styles/default.min.css")
	body
		.site
			aside.site__about
				.sidebar
					.sidebar__about
						include about

					nav.sidebar__links
						block menu

			.site__content
				.article
					block content

					.article__comments
						include disqus

			.site__footer
				include footer

		include metrika
		script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.5.0/highlight.min.js")
		script.
			if (hljs) {
				hljs.initHighlightingOnLoad()
			}
