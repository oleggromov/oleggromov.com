include links

extends layout_site

block title
	| Oleg Gromov

block content
	each page in data.pages
		article.article
			h1
				a(href=page.url)= page.title
			div.article__date #{util.moment(page.date).format('LLL')}
			if page.tags
				div.article__tags
					| Tags:
					for tag in page.tags
						span.article__tags-item
							a(href=tag.url)= tag.name
			| !{page.preview}

			p.more
				a.more__link(href=page.url)= page.more

block menu
	+links(data.extra.common.menu, data.extra.common.external, data.tags)