include links
include tags
include published

extends layout_site

block title
	| Oleg Gromov

block content
	each page in data.pages
		article.article
			h1
				a(href=page.url)!= page.title
			div.article__date.article__date_preview
				+published(page.category, page.date)

			if page.tags
				+tags(page.tags)
			| !{page.preview}

			p.more
				a.more__link(href=page.url)= page.more

block menu
	+links(data.menu, data.extra.common.external, data.tags)