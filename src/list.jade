include links

extends layout_site

block title
	| Oleg Gromov

block content
	each page in data.pages
		article.article
			h1
				a(href=page.url)= page.title
			div.article__date #{util.moment(page.date).format('LLL')}
			div.article__tags
				if page.getTags()
					span.article__tag Tags:&nbsp;
						span= page.getTags()
			| !{page.preview}

			p.more
				a.more__link(href=page.url)= page.more

block menu
	+links(data.extra.common.menu, data.extra.common.external, data.tags)